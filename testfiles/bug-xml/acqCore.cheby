memory-map:
  name: acqCore
  description: Acquisition IP core memory map
  bus: cern-be-vme-err-32
  size: 1k
  x-enums:
  - enum:
      name: acqControl_decimation
      width: 3
      children:
      - item:
          name: noDecimation
          description: no decimation
          value: 0
      - item:
          name: peakDetection
          description: peak detection mode
          value: 1
      - item:
          name: horizDecimation
          description: horizontal decimation
          value: 2
      - item:
          name: vertDecimation
          description: vertical decimation without horizontal decimation
          value: 3
      - item:
          name: vertDecimationWithHoriz
          description: vertical decimation with horizontal decimation
          value: 4
  - enum:
      name: acqStatus_mode
      width: 2
      children:
      - item:
          name: noAcqDSP
          description: no acqDSP block is present
          value: 0
      - item:
          name: acqDSP
          description: acqDSP is present without vertical decimation
          value: 1
      - item:
          name: acqDSPWithVert
          description: acqDSP is present with vertical decimation
          value: 2
  - enum:
      name: acqStatus_format
      width: 2
      children:
      - item:
          name: signedFormat
          description: signed
          value: 0
      - item:
          name: unsignedFormat
          description: unsigned
          value: 1
      - item:
          name: floatFormat
          description: float
          value: 2
  x-gena:
    map-version: 20191120
  x-driver-edge:
    equipment-code: SP-ALCCA
  x-map-info:
    ident: 0xff
    memmap-version: 0.0.1
  schema-version:
    core: 2.0.0
    x-conversions: 1.0.0
    x-driver-edge: 1.0.0
    x-enums: 1.0.0
    x-fesa: 2.0.0
    x-gena: 2.0.0
    x-hdl: 1.0.0
    x-map-info: 1.0.0
    x-wbgen: 1.0.0
  children:
  - submap:
      name: ipInfo
      address: 0x0
      filename: ipInfo.cheby
      include: True
  - reg:
      name: control
      comment: Multiplexed by functSel register value
      description: Control
      width: 32
      access: rw
      address: next
      x-fesa:
        multiplexed: False
        persistence: True
      children:
      - field:
          name: softReset
          description: IP core software reset
          range: 0
          x-gena:
            auto-clear: 1
      - field:
          name: clrFaults
          comment: not implemented yet
          description: Clear fault flags
          range: 1
          x-gena:
            auto-clear: 1
      - field:
          name: debugMode
          description: Enable the debug mode, acquisition of a known pattern
          range: 2
      - field:
          name: softStart
          description: software general start trigger
          range: 3
          x-gena:
            auto-clear: 1
      - field:
          name: softStop
          description: software general stop trigger
          range: 4
          x-gena:
            auto-clear: 1
      - field:
          name: bufferAddrSel
          description: selection of the memory base address
          range: 5
          x-gena:
            auto-clear: 0
  - reg:
      name: bufferStartAddress0
      description: Start address of the buffer 0 where the acquisition data are stored
      width: 32
      type: unsigned
      access: ro
      address: next
      x-gena:
        gen:
          write-strobe: True
      x-fesa:
        multiplexed: False
        persistence: True
        unit: bytes
  - reg:
      name: bufferStartAddress1
      description: Start address of the buffer 1 where the acquisition data are stored
      width: 32
      type: unsigned
      access: ro
      address: next
      x-gena:
        gen:
          write-strobe: True
      x-fesa:
        multiplexed: False
        persistence: True
        unit: bytes
  - reg:
      name: bufferSize
      description: buffer size for each channel
      width: 32
      type: unsigned
      access: ro
      address: next
      x-fesa:
        multiplexed: False
        persistence: True
        unit: 'samples [32bit word]'
  - reg:
      name: acqBufSel
      description: buffer selection and channel selection
      width: 32
      access: rw
      address: next
      x-fesa:
        multiplexed: True
        persistence: True
      children:
      - field:
          name: bufferSelect
          description: 'Selector of multiplexed channel:  0 to 31'
          range: 15-0
      - field:
          name: channelSelect
          description: 'Selector of multiplexed channel:  0 to 11'
          range: 31-16
  - reg:
      name: acqControl
      comment: Multiplexed by acqChanSel register value
      description: Acquisition control
      width: 32
      access: rw
      address: next
      x-gena:
        gen:
          ext-creg: True
          read-strobe: True
          write-strobe: True
      x-fesa:
        multiplexed: True
        persistence: True
      children:
      - field:
          name: enable
          description: Enable the channel
          range: 0
      - field:
          name: softStartTrig
          description: Software manual start trigger
          range: 1
          x-gena:
            auto-clear: 1
      - field:
          name: softStopTrig
          description: Software manual stop trigger
          range: 2
          x-gena:
            auto-clear: 1
      - field:
          name: decimation
          description: select the decimation mode (only if acqDSP block is instantiated)
          range: 5-3
          x-enums:
            name: acqControl_decimation
  - reg:
      name: acqStatus
      comment: Multiplexed by acqChanSel register value
      description: Acquisition status
      width: 32
      access: ro
      address: next
      x-gena:
        gen:
          ext-creg: True
          read-strobe: True
          write-strobe: True
      x-fesa:
        multiplexed: True
        persistence: True
      children:
      - field:
          name: enabled
          description: Buffer selected is enabled
          range: 31
      - field:
          name: available
          description: Channel selected is frozen and ready to be read out
          range: 30
      - field:
          name: complete
          description: Channel has wrapped around the end of the memory
          range: 29
      - field:
          name: mode
          description: acqDSP instantation configuration
          range: 1-0
          x-enums:
            name: acqStatus_mode
      - field:
          name: format
          description: Data format
          range: 3-2
          x-enums:
            name: acqStatus_format
      - field:
          name: busy
          description: The channel is acquiring data
          range: 28
      - field:
          name: empty
          description: FIFO empty status bit
          range: 27
      - field:
          name: fifoFullError
          range: 26
  - reg:
      name: acqLength
      comment: Multiplexed by acqChanSel register value
      description: Acquisition length in samples
      width: 32
      access: rw
      address: next
      x-gena:
        gen:
          ext-creg: True
          read-strobe: True
          write-strobe: True
      x-fesa:
        multiplexed: True
        persistence: True
        unit: samples
  - reg:
      name: acqFrzAddr
      comment: Multiplexed by acqChanSel register value
      description: Acquisition freeze address
      width: 32
      access: ro
      address: next
      x-gena:
        gen:
          ext-creg: True
          read-strobe: True
          write-strobe: True
      x-fesa:
        multiplexed: True
        persistence: True
        unit: bytes
  - reg:
      name: acqRateH1
      comment: Multiplexed by acqChanSel register value
      description: acquisition rate for horizontal decimation 
      width: 32
      access: rw
      address: next
      x-gena:
        gen:
          ext-creg: True
          read-strobe: True
          write-strobe: True
      x-fesa:
        multiplexed: True
        persistence: True
      children:
      - field:
          name: horizScaleMult
          description: multiplier for CIC filter output rescaling
          range: 15-0
  - reg:
      name: acqRateH2
      comment: Multiplexed by acqChanSel register value
      description: acquisition rate for horizontal decimation 
      width: 32
      access: rw
      address: next
      x-gena:
        gen:
          ext-creg: True
          read-strobe: True
          write-strobe: True
      x-fesa:
        multiplexed: True
        persistence: True
      children:
      - field:
          name: horizScaleDiv
          description: divisor for CIC filter output rescaling
          range: 31-24
      - field:
          name: horizRate
          description: horizontal decimation rate
          range: 23-0
  - reg:
      name: acqRateV
      comment: Multiplexed by acqChanSel register value
      description: acquisition rate for vertical decimation 
      width: 32
      access: rw
      address: next
      x-gena:
        gen:
          ext-creg: True
          read-strobe: True
          write-strobe: True
      x-fesa:
        multiplexed: True
        persistence: True
      x-driver-edge:
        max-val: 1024
        min-val: 2
      children:
      - field:
          name: vertRate
          description: vertical decimation rate
          range: 10-0
