memory-map:
  name: muxed
  description: Muxed registers
  bus: cern-be-vme-16
  size: 1048576
  x_gena:
    ident-code: 0x00
    map-version: 20180513
  children:
    - reg:
        name: muxedRegRO
        description: muxed-reg-ro
        width: 32
        access: ro
        address: next
        x_gena:
          gen:
            mux: regSel.channelSelect
    - reg:
        name: muxedRegRW
        description: muxed-reg-rw
        width: 32
        access: rw
        address: next
        x_gena:
          gen:
            mux: regSel.channelSelect
    - reg:
        name: regSel
        description: Acquisition buffer selection
        width: 16
        access: rw
        address: next
        children:
          - field:
              name: channelSelect
              description: Channel selection
              range: 15-8
              x_gena:
                gen:
                  ext-codes: Mem.memory-channel
          - field:
              name: bufferSelect
              description: Buffer selection
              range: 7-0
    - array:
        name: Mem
        description: Memory
        address: next
        repeat: 262144
        x_gena:
          memory-channels:
            - memory-channel:
                acq-width: 16
                channel-select-code: 0
                description: chan 0
                name: channel0
            - memory-channel:
                acq-width: 16
                channel-select-code: 1
                description: chan 1
                name: channel1
        children:
          - reg:
              name: Mem
              width: 16
              access: rw
