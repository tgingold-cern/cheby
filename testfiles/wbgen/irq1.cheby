memory-map:
  name: irq1
  comment: irq1 1
  description: An irq line with a simple register
  bus: wb-32-be
  x-wbgen:
    hdl_entity: irq1
  schema-version:
    core: 2.0.0
    x-conversions: 1.0.0
    x-driver-edge: 1.0.0
    x-enums: 1.0.0
    x-fesa: 2.0.0
    x-gena: 2.0.0
    x-hdl: 1.0.0
    x-map-info: 1.0.0
    x-wbgen: 1.0.0
  children:
  - reg:
      name: R1
      comment: Register 1
      description: Register 1 has two fields
      width: 32
      access: rw
      address: 0x0
      children:
      - field:
          name: reset
          comment: Reset bit
          description: 1 to reset
          range: 0
          x-wbgen:
            access_bus: READ_WRITE
            access_dev: READ_ONLY
            type: BIT
      - field:
          name: mode
          comment: Mode
          description: Set device mode
          range: 3-1
          x-wbgen:
            access_bus: READ_WRITE
            access_dev: READ_ONLY
            type: SLV
  - block:
      name: eic
      address: 0x20
      align: False
      x-wbgen:
        irqs:
        - irq:
            comment: Interrupt 1
            description: Interrupt #1
            name: int1
            pos: 1
            trigger: LEVEL_0
        kind: irq
      children:
      - reg:
          name: eic_idr
          comment: Interrupt disable register
          description: Writing 1 disables handling of the interrupt associated with corresponding bit. Writin 0 has no effect.
          width: 32
          access: wo
          address: 0x0
          children:
          - field:
              name: int1
              comment: Interrupt 1
              description: 'write 1: disable interrupt ''Interrupt 1''\nwrite 0: no effect'
              range: 0
              x-wbgen:
                access_bus: WRITE_ONLY
                type: BIT
      - reg:
          name: eic_ier
          comment: Interrupt enable register
          description: Writing 1 enables handling of the interrupt associated with corresponding bit. Writin 0 has no effect.
          width: 32
          access: wo
          address: 0x4
          children:
          - field:
              name: int1
              comment: Interrupt 1
              description: 'write 1: enable interrupt ''Interrupt 1''\nwrite 0: no effect'
              range: 0
              x-wbgen:
                access_bus: WRITE_ONLY
                type: BIT
      - reg:
          name: eic_imr
          comment: Interrupt mask register
          description: Shows which interrupts are enabled. 1 means that the interrupt associated with the bitfield is enabled
          width: 32
          access: ro
          address: 0x8
          children:
          - field:
              name: int1
              comment: Interrupt 1
              description: 'read 1: interrupt ''Interrupt 1'' is enabled\nread 0: interrupt ''Interrupt 1'' is disabled'
              range: 0
              x-wbgen:
                access_bus: READ_ONLY
                type: BIT
      - reg:
          name: eic_isr
          comment: Interrupt status register
          description: Each bit represents the state of corresponding interrupt. 1 means the interrupt is pending. Writing 1 to a bit clears the corresponding interrupt. Writing 0 has no effect.
          width: 32
          access: rw
          address: 0xc
          children:
          - field:
              name: int1
              comment: Interrupt 1
              description: 'read 1: interrupt ''Interrupt 1'' is pending\nread 0: interrupt not pending\nwrite 1: clear interrupt ''Interrupt 1''\nwrite 0: no effect'
              range: 0
              x-wbgen:
                access_bus: READ_WRITE
                type: BIT
